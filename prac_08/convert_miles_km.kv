BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            font_size: 48


        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'up'
                on_press: app.handle_increment(input_miles.text, 1)
            Button:
                text:'down'
                on_press: app.handle_increment(input_miles.text, -1)

    Button:
        text: 'Convert miles to km'
        on_press: app.handle_calculation(input_miles.text)

    Label:
        id: output_label
        text: app.output_km
        font_size: 48
        color: (0, 1, 1, 1)



